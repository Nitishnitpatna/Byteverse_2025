<%layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3 ">
            <h3><b>  <%=listings.title%> </b></h3>
        </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%=listings.image%>" class="card-img-top show-img" alt="...">
                <div class="card-body">
                    <p class="card-text">
                      <%=listings.description%> <br>
                      &#8377; <%= listings.price.toLocaleString("en-IN")%> <br>
                      <%=listings.location%> <br>
                      <%=listings.country%>
                    </p>
                </div>
        </div>
        <br>
            <div class="btns">
                <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">
                    Edit
                </a> 
                <form action="/listings/<%=listings._id%>?_method=delete" method="post">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
    </div>
    <hr>
    
</body>